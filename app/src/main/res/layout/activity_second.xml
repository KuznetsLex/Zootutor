<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1005dp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="127dp"
                android:layout_height="338dp"
                app:layout_constraintBottom_toTopOf="@+id/image2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/iconfoot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:background="@drawable/farmicon" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/voice" />

            </RadioGroup>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="476dp"
                android:layout_height="202dp"
                android:layout_marginBottom="196dp"
                android:src="@drawable/cow_and_sheep_food"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/image1"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="@+id/image1" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:src="@drawable/cow_2"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/image2"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                app:layout_constraintVertical_bias="0.064"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="476dp"
                android:layout_height="202dp"
                android:layout_marginBottom="252dp"
                android:src="@drawable/cow__soundpic"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/image1"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="@+id/image1"
                app:layout_constraintTop_toBottomOf="@+id/image1"
                app:layout_constraintVertical_bias="0.062" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_marginTop="256dp"
                android:src="@drawable/cow_foot1"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="179dp"
                android:layout_height="129dp"

                android:background="@drawable/arrow"
                android:onClick="rideOnMe"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button12"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image3"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/button12"
                android:layout_width="179dp"
                android:layout_height="129dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/krest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image3"
                app:layout_constraintVertical_bias="0.989" />

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</ScrollView>
